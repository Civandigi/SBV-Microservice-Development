{
  "name": "sbv-professional-v2",
  "version": "2.0.0",
  "description": "SBV Professional V2 - Clean Architecture Edition",
  "main": "backend/src/server.js",
  "scripts": {
    "start": "node backend/src/server.js",
    "dev": "nodemon backend/src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "echo Build process",
    "lint": "eslint backend/src frontend/src",
    "setup": "npm install && node backend/scripts/setup-database.js",
    "migrate": "node backend/scripts/run-migration.js",
    "migrate:create": "echo Create new migration file in backend/migrations/",
    "db:check": "node backend/src/scripts/ensure-database-connection.js",
    "db:test": "node backend/src/scripts/test-postgres-connection.js",
    "db:analyze": "node backend/src/scripts/analyze-table-usage.js",
    "fix:postgres": "node -e \"require('fs').writeFileSync('.env', 'USE_SQLITE=false\\nDATABASE_URL=postgresql://postgres:RvFb9djO-BpZC-JpFFB2su@postgresql-sbv-fg-app-u38422.vm.elestio.app:25432/postgres?sslmode=require\\n')\" && npm run db:check",
    "fix:sqlite": "node -e \"require('fs').writeFileSync('.env', 'USE_SQLITE=true\\n')\" && npm run db:check"
  },
  "keywords": [
    "sbv",
    "swiss-banking",
    "rapport-management",
    "clean-architecture",
    "express",
    "postgresql"
  ],
  "author": "Digitale Rakete",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "franc": "^6.1.0",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mailgun.js": "^12.0.3",
    "mammoth": "^1.6.0",
    "multer": "^1.4.5-lts.1",
    "natural": "^6.10.0",
    "nodemailer": "^7.0.5",
    "pdf-parse": "^1.1.1",
    "pg": "^8.16.3",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "form-data": "^4.0.4",
    "jest": "^29.7.0",
    "node-fetch": "^2.7.0",
    "nodemon": "^3.1.4",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/backend/tests/setup.js"
    ],
    "testMatch": [
      "**/backend/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "backend/src/**/*.js",
      "frontend/src/**/*.js",
      "!backend/src/server.js",
      "!backend/src/scripts/**",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 30,
        "functions": 30,
        "lines": 30,
        "statements": 30
      }
    }
  }
}
