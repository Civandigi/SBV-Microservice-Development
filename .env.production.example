# SBV Professional V2 - Production Environment Configuration
# Copy this file to .env for production deployment

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration (Use strong credentials!)
DATABASE_URL=postgresql://username:password@host:port/database_name
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_IDLE_TIMEOUT=30000

# JWT Configuration (MUST be changed!)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-production
JWT_EXPIRES_IN=8h
JWT_ISSUER=sbv-professional-v2
JWT_AUDIENCE=sbv-users

# CORS Configuration
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Rate Limiting (Production values)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_MAX_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION_MINUTES=30

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,png,jpg,jpeg

# Email Configuration
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
EMAIL_FROM="SBV Professional" <noreply@your-domain.com>
ENABLE_EMAIL_NOTIFICATIONS=true
APP_URL=https://your-domain.com

# Webhook Configuration
ENABLE_WEBHOOKS=true
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/sbv-professional
N8N_WEBHOOK_SECRET=your-webhook-secret-for-production

# Logging
LOG_LEVEL=warn
LOG_FILE=./logs/app.log

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-production
SECURE_COOKIES=true
TRUST_PROXY=true

# Initial Admin Account (Change immediately after first login!)
ADMIN_EMAIL=admin@your-domain.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=ChangeMeImmediately!

# Feature Flags
ENABLE_REGISTRATION=false
ENABLE_PASSWORD_RESET=true
ENABLE_FILE_UPLOAD=true
ENABLE_API_DOCS=false

# External Services
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_ACCESS_KEY=your-s3-access-key
BACKUP_S3_SECRET_KEY=your-s3-secret-key

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_PATH=/health

# SSL/TLS (if handling SSL in app)
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_URI=https://your-domain.com/csp-report