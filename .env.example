# SBV Professional V2 - Environment Configuration Template

# Server Configuration
NODE_ENV=development
PORT=8081
APP_URL=http://localhost:8081

# Database Configuration
DB_TYPE=sqlite
# For SQLite (Development)
DB_PATH=./database.sqlite
# For PostgreSQL (Production)
# DATABASE_URL=postgresql://user:password@localhost:5432/sbv_professional

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-change-this

# ============== MICROSERVICE CONFIGURATION ==============
# External Gesuch Processing Service
GESUCH_SERVICE_URL=http://localhost:3001
GESUCH_SERVICE_API_KEY=your-api-key-for-gesuch-service
GESUCH_SERVICE_TIMEOUT=30000

# Webhook Security
WEBHOOK_SECRET=shared-webhook-secret-between-services
ENABLE_WEBHOOKS=true

# ============== OPTIONAL SERVICES ==============
# Email Service (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@sbv-professional.ch

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# CORS Configuration
CORS_ORIGIN=http://localhost:8081
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Security
BCRYPT_ROUNDS=10
PASSWORD_MIN_LENGTH=8

# Admin Configuration
DEFAULT_ADMIN_EMAIL=admin@sbv-professional.ch
DEFAULT_ADMIN_PASSWORD=Admin123!

# Feature Flags
ENABLE_GESUCH_MICROSERVICE=true
ENABLE_MANUAL_FALLBACK=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_EXPORT_WORD=true

# Monitoring (optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Cache Configuration (optional)
REDIS_URL=redis://localhost:6379
CACHE_TTL=300